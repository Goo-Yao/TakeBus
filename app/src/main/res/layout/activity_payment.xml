<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/payBackgroudColor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F7F7F7"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="#faf9f7"
            android:elevation="1dp">

            <ImageView
                android:id="@+id/iv_keyboard_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_close_grey_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="输入密码"
                android:textColor="@color/keyboardMainColor"
                android:textSize="20sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_payment_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"

            android:background="@drawable/bg_payment_key_frame">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="18dp"
                android:paddingTop="18dp"
                android:src="@drawable/ic_keyboard_circle"
                android:visibility="invisible" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/dividerColor" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="18dp"
                android:paddingTop="18dp"
                android:src="@drawable/ic_keyboard_circle"
                android:visibility="invisible" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/dividerColor" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="18dp"
                android:paddingTop="18dp"
                android:src="@drawable/ic_keyboard_circle"
                android:visibility="invisible" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/dividerColor" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="18dp"
                android:paddingTop="18dp"
                android:src="@drawable/ic_keyboard_circle"
                android:visibility="invisible" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/dividerColor" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="18dp"
                android:paddingTop="18dp"
                android:src="@drawable/ic_keyboard_circle"
                android:visibility="invisible" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/dividerColor" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="18dp"
                android:paddingTop="18dp"
                android:src="@drawable/ic_keyboard_circle"
                android:visibility="invisible" />

        </LinearLayout>

        <!--键盘-->
        <GridView
            android:id="@+id/gv_payment_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="1dp"
            android:numColumns="3"
            android:verticalSpacing="1dp" />

    </LinearLayout>

</RelativeLayout>