<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/rl_station"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginBottom="10dp"
android:layout_marginTop="10dp">

<TextView
    android:id="@+id/tv_station"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:ellipsize="end"
    android:singleLine="true"
    android:text="广美生活区"
    android:textColor="@color/textSecondaryColor"
    android:textSize="13dp" />

<RelativeLayout
    android:id="@+id/ll_station"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_station"
    android:layout_marginTop="10dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_line_3_2px" />

    <ImageView
        android:id="@+id/img_station"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:src="@drawable/circle_start_3_2px" />

    <ImageView
        android:id="@+id/img_bus_right"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-11dp"
        android:src="@drawable/bus"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/img_bus_left"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-11dp"
        android:src="@drawable/bus"
        android:visibility="invisible" />
</RelativeLayout>

<TextView
    android:id="@+id/down"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/ll_station"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:textColor="@color/textSecondaryColor"
    android:textSize="13dp"
    android:visibility="invisible" />

<ImageView
    android:id="@+id/img_alarm"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="#ffffff"
    android:src="@drawable/ic_alarm_on_24dp"
    android:visibility="invisible" />
</RelativeLayout>