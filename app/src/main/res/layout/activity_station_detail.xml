<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/standardColorWhite">

    <include
        android:id="@+id/title"
        layout="@layout/title_station_detail" />

    <TextView
        android:id="@+id/tv_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="站点详细信息："
        android:textColor="@color/textSecondaryColor"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/img_divider"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/tv_station"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/rl_station_item"
        android:background="@color/dividerColor" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_divider" />
</RelativeLayout>